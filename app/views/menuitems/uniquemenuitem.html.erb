<div class="form-search-clear">
  <%= form_with(url:unique_menuitem_path,local:true) do |form| %>
      <%= form.text_field :name,class:"Form-menuitem-input", placeholder:"Enter Fooditem",autofocus:"autofocus" %>
      <%= form.submit "search",class:"Form-search" %>
  <% end %>
  <%= form_with(url:"/menus",method:"get",local:true) do |form| %>
      <%= form.submit "clear search",class:"Form-search" %>
  <% end %>
</div>

<table class="Menu_display menuitems_show">
  <% menuitems.all.each do |menu_item| %>
          <tr>
            <td colspan="2">
              <img src="<%= menu_item.url %>" class="menu-item-image", title="<%= menu_item.name %>">
            </td>
          </tr>
          <tr>
            <td colspan="2" width="20%">
            <p class="Menu_name"> <%= menu_item.name %></p>
            </td>
            <td width="20%">
              <p class="display_price">
                Price :<%= menu_item.price %>/-
              </p>
            </td>
            <%= form_with(url: "/menuitems/#{menu_item.id}",method: "DELETE",local: true) do %>
              <td width="20%">
                <input class="delete" type="submit" value="Remove Item">
              </td>
            <% end %>
            <td width="20%">
              <%= link_to "Edit item", "/menuitems/#{menu_item.id}/edit", method:"get", class:"links" %>
            </td>
        </tr>
    <% end %>
</table>
<form action="/menus" method="get">
  <input class="back_to_menu" type="submit" value="Back to menu">
</form>
