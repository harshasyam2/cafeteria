<table class="Menu_display" width="100%">
  <p class="title"><%= menu_title %></p>
  <% menuitems.all.each do |menu_item| %>
        <tr>
          <td>
            <p class="display_price">
              Price :<%= menu_item.price %>/-
            </p>
          </td>
          <% if show_delete_btn %>
            <%= form_with(url: "/menuitems/#{menu_item.id}",method: "DELETE",local: true) do %>
              <td>
                <input class="delete" type="submit" value="Remove Item">
              </td>
            <% end %>
              <td>
                  <%= link_to "Edit item", "/menuitems/#{menu_item.id}/edit", method:"get", class:"links" %>
              </td>
          <% else %>
            <%= form_with(url: "/orders",method: "POST",local:true) do %>
              <td>
                <input class="item_count" name="no_of_items" type="number" min="0" max="1000">
              </td>
              <input type="hidden" name="id" value="<%= menu_item.id %>">
              <td>
                <input class="Add_to_cart" type="submit" value="Add to cart">
              </td>
            <% end %>
          <% end %>
        </tr>
      <tr>
          <th>
           <p class="Menu_name"> <%= menu_item.name %></p>
          </th>
      </tr>
  <% end %>
  </table>
