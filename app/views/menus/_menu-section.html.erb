<table class="Menu_display" width="100%">
  <p class="title"><%= menu_title %></p>
  <% menuitems.all.each do |menu_item| %>
        <tr>
          <td>
            <p class="display_price">
              Price :<%= menu_item.price %>/-
            </p>
          </td>
          <td>
           <input class="item_count" type="number" min="0" max="1000">
          </td>
          <% if show_delete_btn %>
            <%= form_with(url: "/menuitems/#{menu_item.id}",method: "DELETE") do %>
              <td>
                <input class="delete" type="submit" value="Remove Item">
              </td>
            <% end %>
          <% else %>
            <%= form_with(url: "/orderitems",method: "POST") do %>
              <td>
                <input class="" type="submit" value="Add to cart">
              </td>
            <% end %>
          <% end %>
        </tr>
      <tr>
          <th>
           <p class="Menu_name"> <%= menu_item.name %></p>
          </th>
      </tr>
  <% end %>
  </table>
