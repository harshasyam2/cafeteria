<main class="Main_page">
  <% if show_adding_column %>
        <form class="Adding_menus" action="/menus" method="POST">
                <div class="Add_menu_block">
                        <h1 class="add_menu">Add Menu:</h1>
                        <div class="add_menu_input">
                                <p class="menu_label">Menu Name:</p>
                                 <%= text_field_tag(
                                        name="name",
                                        value=nil,
                                        class: "menu_box",
                                        size: "20",
                                        placeholder: "Enter name of menu"
                                        )
                                %>
                        </div>
                        <div class="add_menu_input">
                                <input class="submit" type="submit" value="Add menu">
                        </div>
                </div>
        </form>
         <form class="Add_menu" action="/menuitems" method="POST">
                <%= text_field_tag(
                        name="name",
                        value=nil,
                        class: "item",
                        size: "15",
                        placeholder: "Enter item name"
                        )
                %>
                <%= text_field_tag(
                        name="price",
                        value=nil,
                        class: "price",
                        size: "10",
                        placeholder: "Enter Price"
                        )
                %>
                <!-- The below line is for identifying the menu name and finding its menu id to add to menuitems table -->
                <select class="menu_id" name="menu_id">
                        <% menus.active.each do |menu| %>
                                <option value="<%= menu.id %>"> <%= menu.name %></option>
                        <% end %>
                </select>
                <%= text_field_tag(
                        name="url",
                        value=nil,
                        class:"image-holder",
                        placeholder: "Image Url"
                        )
                %>
                <input class="submit" type="submit" value="Add an item">
        </form>
  <% end %>
        <%= form_with(url:unique_menuitem_path,local:true) do %>
                        <%= text_field_tag(
                                name="name",
                                value=nil,
                                class: "Form-menuitem-input",
                                placeholder: "Enter Fooditem",
                                autofocus: "autofocus"
                                )
                        %>
                        <button type="submit" class="Form-search">
                                <i class="fa fa-search"></i>&nbsp;&nbsp;&nbsp;Search
                        </button>
        <% end %>
        <% menus.active.each do |menu| %>
                <% if menu.menuitems.active.count >0 %>
                        <%= render partial:"menu-section",locals:{
                                menu_title:menu.name,
                                menuitems:Menuitem.all.where(menu_id:menu.id),
                                show_delete_btn:show_adding_column,
                        } %>
                <% end %>
        <% end %>
</main>
