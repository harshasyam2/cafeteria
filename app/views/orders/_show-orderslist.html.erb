<table class="list_orders_to_admin">
  <% orders_list.all.each do |order| %>
    <tr>
    <% customer=Customer.find(order.customer_id) %>
      <td>
        <% customer_name=customer.first_name.concat(" #{customer.last_name} ") %>
        <% if customer.role=="Customer" %>
          <p  class="order_display_user"> <%= customer_name %> </p>
        <% else %>
          <p  class="order_display_user"> <%= customer_name.concat(" (#{customer.role}) ") %> </p>
        <% end %>
      </td>
      <td>
        <p  class="order_display_user"> <%= customer.contact_number %> </p>
      </td>
      <td>
        <p class="order_bill"> Bill : <%= order.bill %>/-</p>
      </td>
      <td>
        <%= form_with(url: "/orders/#{order.id}", method: "get",local: true) do %>
          <input class="button show" type="submit" value="Show Details">
        <% end %>
      </td>
      <% if show_delivered_button%>
        <td>
          <%= form_with(url: "/orders/#{order.id}", method: "put",local: true) do %>
            <input type="hidden" name="bill" value="<%= order.bill %>">
            <input type="hidden" name="status" value="delivered">
            <input class="button delivered" type="submit" value="Delivered">
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
