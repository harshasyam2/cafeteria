<div class="main_content">
  <p class="title_of_page"> Sales Based On Dates </p>
  <%= form_with(url: "/showlist", method: "get",local:true) do %>
    <div class="search_records">
      <label class="label_to_records from">
        From Date:
      </label>
        <input class="from_to_button" type="date" name="initial_date">
      <label class="label_to_records to">
        To Date:
      </label>
      <input class="from_to_button" type="date" name="final_date">
      <input class="search_button" type="submit" value="Search">
    </div>
  <% end %>
  <div class="sales_page">
    <div class="display_dates">From Date :
      <p class="display_ini_fin_dates"><%= Date.today - 30 %></p>
    </div>
    <div class="display_dates">To Date :
      <p class="display_ini_fin_dates"><%= Date.today %></p>
    </div>
    <% @orders = Order.fromto( Date.today - 30,Date.today) %>
    <%= render partial:"show-orderslist", locals:{
        orders_list: @orders.delivered,
        show_delivered_button:false,
      }
    %>
  </div>
</div>
